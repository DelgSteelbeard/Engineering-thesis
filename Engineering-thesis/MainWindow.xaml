<Window x:Class="Engineeringthesis.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Engineeringthesis"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="Diagram" Background="LightGray" Margin="10"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="10">
            <TextBox Name="PointCountBox" Width="100" Text="1500" Margin="0,0,10,0"/>
            <Slider Name="LandTreshold" Minimum = "0" Maximum = "1" ValueChanged = "LandTreshold_ValueChanged" Width="200" Margin="0,0,10,0"/>
            <TextBox Name="LandTresholdBox" Width="100" Text="0.5" Margin="0,0,10,0"/>
            <Button Content="Generuj punkty" Click="GeneratePoints_Click"/>
        </StackPanel>
    </Grid>
</Window>
